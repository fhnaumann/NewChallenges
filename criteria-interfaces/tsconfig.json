{
    "compilerOptions": {
      "target": "es2019", 
      "lib": ["es2019", "dom"],                                 
      "module": "commonjs",  
      "declaration": true,
      "rootDir": "src",
      "allowJs": true,
      "outDir": "./build",
      "noEmit": false,                             
      "esModuleInterop": true,         
      "noImplicitAny": false,
      "moduleResolution": "node",                    
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                  
      "skipLibCheck": true                                 
    },
    "include": [
      "src"
    ],
    "exclude": [
  
    ],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }